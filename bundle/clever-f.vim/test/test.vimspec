set encoding=utf-8
set termencoding=utf-8
set fileencoding=utf-8

scriptencoding utf-8

function! AddLine(str)
    put! =a:str
endfunction

function! CursorPos()
    return [line('.'), col('.'), getline('.')[col('.')-1]]
endfunction

