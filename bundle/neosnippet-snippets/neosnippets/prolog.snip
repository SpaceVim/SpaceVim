snippet main
options     head
  :- initialization main.

  main :-
    current_prolog_flag(argv, Args),
    writeln(Args),
    halt.

snippet module
options     head
  :- module(${1:name}, [${0:export}]).

snippet begintest
options     head
  :- begin_tests(${1:name}).
    ${0}
  :- end_tests($1).

snippet runtest
options     head
  :- run_tests.
  :- halt.

snippet test
options     head
  test(${1:case}, [true(${2:var} = ${3:value})]) :-
    ${0:goal}.
