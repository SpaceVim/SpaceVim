    ".root","*.sbt",".vim",".git",".hg",".projections.json"
  ],

  "pyls.enable"                              : true,
  "pyls.plugins.preload.enabled"             : true,
  "pyls.plugins.rope_completion.enabled"     : true,
  "pyls.plugins.jedi_completion.enabled"     : true,
  "pyls.plugins.jedi_hover.enabled"          : true,
  "pyls.plugins.jedi_symbols.enabled"        : true,
  "pyls.plugins.jedi_references.enabled"     : true,
  "pyls.plugins.jedi_signature_help.enabled" : true,
  "pyls.plugins.pyflakes.enabled"            : true,
  "pyls.plugins.mccabe.enabled"              : true,
  "pyls.plugins.pycodestyle.enabled"         : true,
  "pyls.plugins.pydocstyle.enabled"          : true,
  "pyls.plugins.yapf.enabled"                : true,
  "pyls.configurationSources"                : ["pycodestyle"],
  "pyls.commandPath"                         : "/home/alanding/software/anaconda3/envs/py36/bin/pyls",

  "java.home"                                : "/opt/lang-tools/java/jdk1.8.0_191/bin",
  "java.completion.enabled"                  : true,
  "java.format.enabled"                      : true,
  "java.signatureHelp.enabled"               : true,
  "java.referencesCodeLens.enabled"          : false,
  "java.import.maven.enabled"                : true,
  "java.format.comments.enabled"             : true,

  "tsserver.enable"                          : true,
  "tsserver.trace.server"                    : "verbose",
  "javascript.suggest.enabled"               : true,
  "javascript.suggest.names"                 : true,
  "javascript.validate.enable"               : true,
  "javascript.suggest.autoImports"           : true,
  "javascript.suggestionActions.enabled"     : true,

  "html.enable"                              : true,
  "html.filetypes"                           : ["html", "handlebars", "razor"],
  "html.format.enable"                       : true,
  "html.validate.scripts"                    : true,
  "html.validate.styles"                     : true,

  "diagnostic.enable"                        : true,
  "diagnostic.virtualText"                   : true,
  "diagnostic.virtualTextPrefix"             : "->>",
  

  "languageserver": {
    "pyls" : {
      "command": "pyls",
      "args": [],
      "filetypes": ["python", "ipynb"]
     },
    "bash" : {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
     },
//    "efm" : {
//      "command": "efm-langserver",
//      "args": ["-c", "$HOME/.config/efm-langserver/config.yaml"],
//      "filetypes": ["vim", "markdown"]
//    },
    "golang" : {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosisEnabled":true,
        "lintTool":"golint"}
     },
    "javascript" : {
      "command": "javascript-typescript-stdio",
      "args": [],
      "filetypes": ["javascript"]
     },
    "scala" : {
      "command": "metals-vim",
      "args": [],
      "filetypes": ["scala", "sbt"]
     },
    "dls"  : {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": [ "sh" ],
      "initializationOptions": {
        "linters": {
          "shellcheck": {
            "command": "shellcheck",
            "debounce": 100,
            "args": [ "--format=gcc", "-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "shellcheck",
            "formatLines": 1,
            "formatPattern": [
              "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
               {
                "line": 1,
                "column": 2,
                "message": 4,
                "security": 3
               }
             ],
          "securities": {
            "error": "error",
            "warning": "warning",
            "note": "info"
           }
         },
       },
       "filetypes": {
         "sh": "shellcheck"
        }
      }
    }
  }
}
